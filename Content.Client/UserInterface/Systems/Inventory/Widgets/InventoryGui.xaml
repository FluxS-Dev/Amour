<widgets:InventoryGui
    xmlns="https://spacestation14.io"
    xmlns:inventory="clr-namespace:Content.Client.UserInterface.Systems.Inventory.Controls"
    xmlns:widgets="clr-namespace:Content.Client.UserInterface.Systems.Inventory.Widgets"
    xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls"
    Name="InventoryInterface"
    VerticalExpand="True"
    VerticalAlignment="Bottom"
    Orientation="Vertical"
    HorizontalAlignment="Center">
    <!-- Orion-Edit-Start -->
    <Control HorizontalAlignment="Left">
        <inventory:ItemSlotButtonContainer
            Name="ExtraHotbar"
            Access="Public"
            Visible="False"
            MaxColumns="3"
            SlotGroup="Extra"
            ExpandBackwards="True"
            VerticalExpand="True"
            HorizontalAlignment="Center"
        />
        <controls:SlotButton
            Name="ExtraButton"
            Access="Public"
            Visible="False"
            VerticalAlignment="Bottom"
            HorizontalAlignment="Left"
            HorizontalExpand="False"
            VerticalExpand="False"
            ButtonTexturePath="Slots/toggle-alt"/>
    </Control>
    <Control HorizontalAlignment="Center">
        <inventory:ItemSlotButtonContainer
            Name="InventoryHotbar"
            Access="Public"
            Visible="False"
            MaxColumns="3"
            SlotGroup="Default"
            ExpandBackwards="True"
            VerticalExpand="True"
            HorizontalAlignment="Center"
        />
        <controls:SlotButton
            Name="InventoryButton"
            Access="Public"
            Visible="False"
            VerticalAlignment="Bottom"
            HorizontalAlignment="Left"
            HorizontalExpand="False"
            VerticalExpand="False"
            ButtonTexturePath="Slots/toggle"/>
    </Control>
    <!-- Orion-Edit-End -->
</widgets:InventoryGui>
